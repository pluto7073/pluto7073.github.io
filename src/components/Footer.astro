---
import FooterLink from "./FooterLink.astro";
const today = new Date();
---

<footer class="p-12 mt-16 text-center relative font-mono border-t-2 border-purple-500" style="background: linear-gradient(135deg, #000000 0%, #51317e 100%);">
    <!-- Top Glow Line -->
    <div class="absolute top-0 left-0 right-0 h-px bg-purple-500" style="box-shadow: 0 0 10px #8b5cf6;"></div>

    <div class="max-w-6xl mx-auto flex flex-col items-center gap-8">

        <div class="text-sm text-purple-300" style="text-shadow: 0 0 3px rgba(139, 92, 246, 0.3);">
            &copy; {today.getFullYear()} Pluto7073
        </div>

        <!-- GitHub and Mod Hosting -->
        <div class="flex items-center justify-center gap-6 text-gray-400">
            <FooterLink href="https://github.com/pluto7073/pluto7073.github.io" icon="mdi:github">Source Code</FooterLink>
            <span class="text-gray-600">•</span>
            <FooterLink href="https://github.com/withastro/astro" icon="simple-icons:astro">with Astro</FooterLink>
        </div>
        <div class="flex items-center justify-center gap-6 text-gray-400">
            <FooterLink href="https://modrinth.com/user/pluto7073" icon="simple-icons:modrinth">Modrinth</FooterLink>
            <span class="text-gray-600">•</span>
            <FooterLink href="https://www.curseforge.com/members/pluto7073/projects" icon="simple-icons:curseforge">Curseforge</FooterLink>
        </div>

        <div class="flex items-center justify-center gap-2 text-gray-400">
            <FooterLink href="https://www.instagram.com/pluto_sag" icon="simple-icons:instagram"></FooterLink>
            <span class="text-gray-600">•</span>
            <FooterLink href="https://pluto-sag.tumblr.com/" icon="simple-icons:tumblr"></FooterLink>
            <span class="text-gray-600">•</span>
            <FooterLink href="https://www.youtube.com/@pluto7073" icon="simple-icons:youtube"></FooterLink>
            <span class="text-gray-600">•</span>
            <FooterLink href="https://www.twitch.tv/pluto7073" icon="simple-icons:twitch"></FooterLink>
        </div>
    </div>
</footer>

<script>
    import 'iconify-icon';
</script>
<style>
    @media (max-width: 720px) {
        footer {
            padding: 2rem 1rem;
        }
    }

    /* Slow spin animation */
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    .animate-spin-slow {
        animation: spin-slow 3s linear infinite;
    }
</style>